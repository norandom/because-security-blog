# Blog Backend Configuration
# Copy this file to .env and adjust values for your environment

# Application Settings
APP_NAME="Blog Backend API"
APP_VERSION="2.1.0"
DEBUG=false

# Content Settings
POSTS_DIRECTORY="posts"
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=".png,.jpg,.jpeg,.gif,.svg,.pdf,.zip,.webp"

# Performance Settings
MAX_WORKERS=4
CACHE_ENABLED=true
CACHE_TTL=300  # 5 minutes
STATS_CACHE_TTL=300

# Search Settings
SEARCH_MIN_LENGTH=2
SEARCH_MAX_RESULTS=100

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"  # json or text

# Health Check
HEALTH_CHECK_POSTS_THRESHOLD=0

# Tenant Settings
DEFAULT_TENANT="shared"
# TENANT_NAMES is a JSON object: {"infosec": "Information Security", "quant": "Quantitative Finance", "shared": "Shared Content"}

# CORS Settings
# CORS_ORIGINS is a JSON array: ["http://localhost:3000", "https://yourdomain.com"]
# ALLOWED_HOSTS is a JSON array: ["localhost", "yourdomain.com"] (empty array allows all)

# Security Settings
MAX_CONTENT_LENGTH=1048576  # 1MB
SANITIZE_HTML=true
RESTRICT_FILE_ACCESS=true
MAX_QUERY_LENGTH=200
MAX_TAG_LENGTH=50
MAX_TAGS_PER_POST=10

# API Security (optional)
REQUIRE_API_KEY=false
API_KEY_HEADER="X-API-Key"
# VALID_API_KEYS is a JSON array: ["your-secret-key-1", "your-secret-key-2"]

# Database Settings (for future use)
USE_DATABASE=false
# DATABASE_URL="sqlite:///blog.db"
DATABASE_ECHO=false